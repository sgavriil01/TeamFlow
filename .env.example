# Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/teamflow

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
JIRA_CLIENT_ID=your_jira_oauth_client_id
JIRA_CLIENT_SECRET=your_jira_oauth_client_secret
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Application
SECRET_KEY=your_secret_key_for_sessions
DEBUG=True
LOG_LEVEL=INFO

# AI Configuration
AI_MODEL_ROUTER=gpt-4o-mini
AI_MODEL_SUMMARIZER=gpt-4o
AI_EMBEDDING_MODEL=text-embedding-3-small
AI_MAX_TOKENS=4000

# Rate Limiting (when Redis is added)
REDIS_URL=redis://localhost:6379/0

# Optional: Local LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
ENABLE_LOCAL_LLM=False
